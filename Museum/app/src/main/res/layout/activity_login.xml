<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="project.museum.view.Login"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextName"
            android:hint="Name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="77dp"
            android:layout_marginLeft="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="64dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.504"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPassword"
            android:hint="Password"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextName"
            android:layout_marginLeft="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="64dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.503"/>

    <Button
            android:text="Login"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/editTextPassword"
            android:onClick="loginClick"
            />

    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGotoRegister"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/editTextPassword"
            android:onClick="registerClick"/>

    <Button
            android:text="Guest Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGuest"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/buttonLogin"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/buttonGotoRegister"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            app:layout_constraintHorizontal_bias="0.511"/>
</android.support.constraint.ConstraintLayout>